%h1= @event.name
企画者
= @event.planner
%br
%br

= field_set_tag '■イベント' do
  = @event.detail
  %br
  %br
  = link_to 'イベント内容を編集する(要パスワード)', edit_event_path(@event), class: 'btn btn-warning'

%br

= field_set_tag '■日程' do
  %table.table-bordered
    %tr
      %th 参加者名
      %th 希望日１
      %th 希望日２
      %th 希望日３
    - @event.members.each do |member|
      %tr
        %td
        %td
        %td
        %td
    %tr
      %td= link_to 'このイベントに参加する', new_event_member_path(@event), class: 'btn btn-primary'
      %td
      %td
      %td

%br

= field_set_tag '■場所' do
  %table.table-bordered
    %tr
      %th 参加者名
      %th 希望場所１
      %th 希望場所２
      %th 希望場所３
    - @event.members.each do |member|
      %tr
        %td
        %td
        %td
        %td
    %tr
      %td= link_to 'このイベントに参加する', new_event_member_path(@event), class: 'btn btn-primary'
      %td
      %td
      %td

%br

= field_set_tag '■掲示板' do
  %table.table-bordered
    - if @event.boards.present?
      - @event.boards.each do |board|
        %tr
          %td
            投稿者
            = board.name
            %br
            = board.tweet
    - else
      投稿はありません。

  %br

  = field_set_tag '■投稿欄' do
    - @board = @event.boards.build
    = simple_form_for @board, url: bulk_create_event_path do |f|
      - if @board.errors.any?
        #error_explanation
          %h2= "#{pluralize(@board.errors.count, "error")} prohibited this board from being saved:"
          %ul
            - @board.errors.full_messages.each do |msg|
              %li= msg

      = f.input :name
      = f.input :tweet

      .actions
        = f.submit '投稿', class: 'btn btn-primary'
