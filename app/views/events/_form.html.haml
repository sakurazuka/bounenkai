= simple_form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  = f.input :name
  = f.input :detail
  = f.input :planner
  = f.input :password

  .actions
    = f.submit '登録', class: 'btn btn-primary'
